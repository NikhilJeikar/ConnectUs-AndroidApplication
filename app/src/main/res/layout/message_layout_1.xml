<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingVertical="5dp"
    android:paddingRight="120dp"
    android:paddingLeft="7dp"
    android:clipToPadding="false">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/line1"
        android:background="@drawable/messege_sender_look"
        tools:ignore="ExtraText">
        <TextView
            android:id="@+id/message_body_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:fontFamily="@font/montserratalternatesregular"
            android:elevation="2dp"
            android:padding="10dp"
            android:layout_marginRight="65dp"
            android:text="Placeholder message"
            android:textColor="#ffffff"
            android:textSize="15dp" />

    </RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/message_time_1"
        android:layout_alignEnd="@id/line1"
        android:singleLine="true"
        android:padding="10dp"
        android:textColor="#ffffff"
        android:textSize="13dp"
        android:layout_alignBottom="@id/line1"/>
</RelativeLayout>