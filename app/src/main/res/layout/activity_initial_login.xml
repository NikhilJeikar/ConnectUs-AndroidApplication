<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/initial_login_parent_layout"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:backgroundTint="#492daf"
    android:backgroundTintMode="screen"
    tools:context=".Initial_login">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_above="@id/login_num"
        android:layout_marginBottom="-10dp"
        android:id="@+id/layout_seg1">



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mobile number:"
            android:layout_marginLeft="109dp"
            android:fontFamily="@font/penultimateregular"
            android:textSize="20dp"
            android:textColor="#ffffff"
            android:layout_alignParentBottom="true"
            />
    </RelativeLayout>

    <EditText
        android:id="@+id/login_num"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        tools:layout_editor_absoluteX="81dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        tools:layout_editor_absoluteY="194dp"
        android:backgroundTint="#000000"
        />
    <!--#55c5f1-->

    <Button
        android:id="@+id/buttonContinue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_num"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textColor="#ffffff"
        android:fontFamily="@font/penultimateregular"
        android:background="@drawable/msg_outline_dp"
        android:text="Join" />

    <TextView
        android:id="@+id/tc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="By joining in you are agreeing to the terms and condition "
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"/>
</RelativeLayout>