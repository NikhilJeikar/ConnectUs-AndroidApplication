<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/about_us_activity"
    tools:context=".Aboutus">
    <RelativeLayout
        android:id="@+id/layout_seg1"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_alignParentTop="true"
        android:background="#48a6e8">
        <ImageButton
            android:id="@+id/msg_abt_back_btn"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_centerInParent="false"
            android:background="@drawable/back_clipart"
            android:layout_centerVertical="true" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layout_about"
        android:layout_below="@id/layout_seg1">

        <TextView
            android:id="@+id/created"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:text=" Created by "
            android:textColor="#000000" />

        <TextView
            android:id="@+id/created_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/created"
            android:layout_alignParentRight="true"
            android:text="Nikhil Jeikar " />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layout_about_1"
        android:layout_below="@id/layout_about">

        <TextView
            android:id="@+id/Architect"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text=" UI designed by"
            android:textColor="#000000" />
        <TextView
            android:id="@+id/Arch_name_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/Architect"
            android:layout_alignParentRight="true"
            android:text="Adarsh Selvam "/>
        <TextView
            android:id="@+id/Arch_name_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Arch_name_3"
            android:layout_alignParentRight="true"
            android:text="Mahendra Prakash " />
        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/Arch_name_2"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Arch_name_1"
            android:layout_alignParentRight="true"
            android:text="Shanay Kapasi " />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layout_about_2"
        android:layout_below="@id/layout_about_1">

        <TextView
            android:id="@+id/update_date_s"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text=" Last update version code"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/update_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/update_date_s"
            android:layout_alignParentRight="true"
            android:text=""
             />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layout_about_3"
        android:layout_below="@id/layout_about_2">

        <TextView
            android:id="@+id/your_version"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="  Your version code"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/ver_ins"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/your_version"
            android:layout_alignParentRight="true"
            android:text="1.0.1 "
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layout_about_4"
        android:layout_below="@id/layout_about_3">

        <TextView
            android:id="@+id/contact_us"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="  Contact us"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/mail_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/contact_us"
            android:layout_alignParentRight="true"
            android:text="hagglemessenger@gmail.com "
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layout_report_bug"
        android:layout_below="@id/layout_about_4">
        <Button
            android:layout_width="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content"
            android:id="@+id/bug_button"
            android:text="Report a bug"
            android:layout_marginTop="20dp"
            android:background="@android:color/transparent"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tc"
            android:text="Terms and condition"
            android:layout_centerHorizontal="true"
            android:textColor="#000000"
            android:layout_below="@id/bug_button"
            android:layout_marginTop="10dp"
            />

    </RelativeLayout>
</RelativeLayout>